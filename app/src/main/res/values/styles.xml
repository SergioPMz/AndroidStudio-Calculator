<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Background">
        <item name="android:background">#636363</item>
    </style>

    <style name="GuideLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="GuideLineHorizontal" parent="GuideLine">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="GuideLineVertical" parent="GuideLine">
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="CalcButton">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">#222222</item>
        <item name="android:textColor">#FF5C00</item>
        <item name="android:layout_margin">1dp</item>

    </style>

    <style name="Output">
        <item name="android:textSize">60sp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Operation">
        <item name="android:textSize">30sp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#3b3b3b</item>
    </style>
</resources>